@page
@model Profile.Pages.AP.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body" style="background-color:white !important;color:black !important;">

                    <h1 style="color:black;">Index</h1>

                    <p>
                        <a asp-page="Create" class="btn btn-primary">Create New</a>
                    </p>
                    <div class="table-responsive">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Location
                                    </th>
                                    <th>
                                        Requirement
                                    </th>
                                    <th>
                                        Cost
                                    </th>
                                    <th>Course</th>
                                    <th>Date Range</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Application)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SchoolName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ApplicationInformation)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Finance)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Course)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ApplicationDateRange)
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-primary">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
