@page
@model Profile.Pages.AP.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body" style="background-color:white !important;color:black !important;">
                    <h1 style="color:black;">Create</h1>

                    <h4 style="color:black;">Application</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Application.SchoolName" class="control-label"></label>
                                    <textarea asp-for="Application.SchoolName" class="form-control" style="width:100%;"></textarea>
                                    <span asp-validation-for="Application.SchoolName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Application.Location" class="control-label"></label>
                                    <textarea asp-for="Application.Location" class="form-control" style="width:100%;"></textarea>
                                    <span asp-validation-for="Application.Location" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Application.ApplicationInformation" class="control-label"></label>
                                    <textarea asp-for="Application.ApplicationInformation" class="form-control" style="width:100%;"></textarea>
                                    <span asp-validation-for="Application.ApplicationInformation" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Application.Course" class="control-label"></label>
                                    <textarea asp-for="Application.Course" class="form-control" style="width:100%;"></textarea>
                                    <span asp-validation-for="Application.Course" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Application.ApplicationDateRange" class="control-label"></label>
                                    <textarea asp-for="Application.ApplicationDateRange" class="form-control" style="width:100%;"></textarea>
                                    <span asp-validation-for="Application.ApplicationDateRange" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Application.Finance" class="control-label"></label>
                                    <textarea asp-for="Application.Finance" class="form-control" style="width:100%;"></textarea>
                                    <span asp-validation-for="Application.Finance" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-page="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
